    echo "export LS_COLORS" >> ~/.bashrc
    echo "set background=dark" >> ~/.vimrc
    echo 'export PYENV_ROOT="$HOME/.pyenv"' >> ~/.bashrc
    echo 'export PATH="$PYENV_ROOT/bin:$HOME/.poetry/bin:$PATH"' >> ~/.bashrc
    echo -e 'if command -v pyenv 1>/dev/null 2>&1; then\n  eval "$(pyenv init -)"\nfi' >> ~/.bashrc

    #Pull pyenv dependency packages once only
    sudo apt-get -y install build-essential libssl-dev zlib1g-dev libbz2-dev \
    libreadline-dev libsqlite3-dev wget curl llvm libncurses5-dev libncursesw5-dev \
    xz-utils tk-dev libffi-dev liblzma-dev python-openssl git
    
    #Fails everytime sadly during provisioning, so has to be run manually.

    #sudo apt-get update --fix-missing

    #Pull pyenv from github
    #git clone https://github.com/pyenv/pyenv.git ~/.pyenv
  
    #export PYENV_ROOT="$HOME/.pyenv"
    #export PATH="$PYENV_ROOT/bin:$PATH"
    
    #pyenv init
    
